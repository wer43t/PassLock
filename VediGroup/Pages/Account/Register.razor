@page "/register"
@inherits RegisterModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Регистрация</h1>

        <EditForm Model="@ViewModel" OnValidSubmit="RegisterAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <label for="username">Логин</label>
            <InputText id="username" @bind-Value="@ViewModel.Username" class="form-control" />
            
            <label for="email">Email</label>
            <InputText id="email" @bind-Value="@ViewModel.Email" class="form-control" />

            <label for="lastName">Фамилия</label>
            <InputText id="lastName" @bind-Value="@ViewModel.LastName" class="form-control" />

            <label for="firstName">Имя</label>
            <InputText id="firstName" @bind-Value="@ViewModel.FirstName" class="form-control" />

            <label for="password">Пароль</label>
            <InputText id="password" @bind-Value="@ViewModel.Password" class="form-control" type="password" />

            <label for="confirmPassword">Подтвержение пароля</label>
            <InputText id="confirmPassword" @bind-Value="@ViewModel.ConfirmPassword" class="form-control" type="password" />

            <p class="my-4">
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </p>
        </EditForm>


    </div>
</div>

