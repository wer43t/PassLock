@inject NavigationManager NavigationManager
@inject IModalService ModalService

<div class="container">
    <div class="items">
        <div class="label">
            email
        </div>
        <div>
            <input @bind-value="Login.email" placeholder="Add email..." />
        </div>
    </div>
    <div class="items">
        <div class="label">
            username
        </div>
        <div>
            <input @bind-value="Login.username" placeholder="Add username..." />
        </div>
    </div>
    <div class="items">
        <div class="label">
            password
        </div>
        <div class="input-container">
            <div class="relative">
                <input @bind-value="Login.password" placeholder="Add password..." type="@InputType" />
            <div class="button-container">
                    <button class="showbtn" onclick="@(ChangeVisibility)" aria-label="Показать">
                    <span>
                        <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" version="1.1" class="ui-components-h0oshn"><path fill-rule="evenodd" clip-rule="evenodd" d="M10 11.5C10.8284 11.5 11.5 10.8284 11.5 10C11.5 9.17157 10.8284 8.5 10 8.5C9.17157 8.5 8.5 9.17157 8.5 10C8.5 10.8284 9.17157 11.5 10 11.5ZM10 13C11.6569 13 13 11.6569 13 10C13 8.34315 11.6569 7 10 7C8.34315 7 7 8.34315 7 10C7 11.6569 8.34315 13 10 13Z"></path> <path fill-rule="evenodd" clip-rule="evenodd" d="M18 10.0001C18 10.0001 16 4 10 4C4 4 2 10.0001 2 10.0001C2 10.0001 4 16 10 16C16 16 18 10.0001 18 10.0001ZM3.62005 10.0001C3.65718 10.0811 3.69973 10.1704 3.74789 10.2668C3.9914 10.7538 4.36904 11.3998 4.90232 12.0398C5.95964 13.3085 7.57163 14.5 10 14.5C12.4284 14.5 14.0404 13.3085 15.0977 12.0398C15.631 11.3998 16.0086 10.7538 16.2521 10.2668C16.3003 10.1705 16.3428 10.0811 16.38 10.0001C16.3428 9.9191 16.3003 9.82974 16.2521 9.73341C16.0086 9.24637 15.6309 8.60028 15.0977 7.96032C14.0403 6.69151 12.4283 5.5 10 5.5C7.57166 5.5 5.95967 6.69151 4.90234 7.96032C4.36905 8.60028 3.99141 9.24637 3.7479 9.73341C3.69973 9.82974 3.65718 9.9191 3.62005 10.0001Z"></path></svg>
                    </span>
                </button>
            </div>
            </div>
        </div>
    </div>
    <div class="items">
        <div class="label">
            website
        </div>
        <div>
            <input @bind-value="Login.website" placeholder="Add URL..." />
        </div>
    </div>
    <div class="items">
        <div class="label">
            Item name
        </div>
        <div>
            <input @bind-value="Login.item_name" placeholder="Add item name..." />
        </div>
    </div>
    <div class="items">
        <div class="label">
            Note
        </div>
        <div>
            <input @bind-value="Login.note" placeholder="Add a note..." class="note-input" />
        </div>
    </div>
</div>


@code {
    [Parameter]
    public Login Login { get; set; }

    private bool state = true;

    private string InputType => state ? "password" : "text";

    private void ChangeVisibility()
    {
        state = !state;
    }

}
